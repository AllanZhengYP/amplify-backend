{
  "name": "backend",
  "version": "0.1.0",
  "bin": {
    "backend": "bin/backend.js"
  },
  "scripts": {
    "build": "npm run amp:init && tsc -p tsconfig.json",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk synth && cdk deploy && npm run amp:introSchema",
    "amp:init": "node ./scripts/dummy-init.js",
    "amp:introSchema": "amplify codegen model-introspection --output-dir ../web/src",
    "clean": "rimraf lib cdk.out node_modules"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "20.4.2",
    "aws-cdk": "2.88.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@aws-amplify/graphql-construct-alpha": "^0.5.0",
    "aws-cdk-lib": "2.88.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "type-beast": "*",
    "@aws-amplify/types-package-alpha": "api-v6-models"
  }
}
