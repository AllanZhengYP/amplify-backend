{
  "name": "amplify-vnext",
  "version": "0.0.1",
  "description": "",
  "bin": {
    "vnext": "lib/cli.js"
  },
  "scripts": {
    "build": "npm run build -ws",
    "clean": "npm run clean -ws && rimraf node_modules coverage .eslintcache",
    "install:local": "npm run build && npm link --force",
    "lint": "eslint --max-warnings 0 **/*.ts && prettier --check .",
    "prepare": "husky install",
    "test": "node --loader tsx scripts/run_unit_tests.ts",
    "test:coverage:generate": "NODE_V8_COVERAGE=coverage/ npm run test",
    "test:coverage:threshold": "c8 --check-coverage --lines 95 --functions 95 --branches 95 --exclude scripts/** npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aws-amplify/cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "AWS Amplify",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/aws-amplify/cli/issues"
  },
  "homepage": "https://github.com/aws-amplify/cli#readme",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "c8": "^7.13.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo-typescript": "^0.57.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "execa": "^7.1.1",
    "glob": "^10.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "packages/lib-synth",
    "packages/cli"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.json": "prettier --write",
    "*.yml": "prettier --write",
    "*.md": "prettier --write"
  }
}
